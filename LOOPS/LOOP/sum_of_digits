/* Sum of digits using while loop */
#include <stdio.h>

int main()
{
 int n, s = 0;
 
 printf("Please enter a number: ");
 scanf("%d",&n);
 
 while (n > 0)
 {
  s = s + n%10;
  n = n/10;
 }
 
 printf("Sum of digits is: %d", s);
 return 0;
}

------------------------------------------------------

/* Sum of digits using for loop */
#include <stdio.h>
int main()
{
 int n, s;
 
 printf("Please enter a number: ");
 scanf("%d",&n);
 
 for(s=0;n>0;n=n/10)
 {
  s = s + n%10;
 }
 
 printf("Sum of digits is: %d", s);
 return 0;
}
